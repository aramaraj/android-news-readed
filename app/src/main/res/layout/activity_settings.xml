<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="adalwin.com.activities.SettingsActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvName"
            android:id="@+id/tvDate"
            android:layout_marginTop="71dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/tvSortOrder"
            android:layout_alignStart="@+id/tvSortOrder" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/dtBeginDate"
            android:layout_alignBottom="@+id/tvDate"
            android:layout_toRightOf="@+id/tvNewsDesk"
            android:layout_toEndOf="@+id/tvNewsDesk" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvSortName"
            android:id="@+id/tvSortOrder"
            android:layout_marginTop="34dp"
            android:layout_below="@+id/tvDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerSort"
            android:layout_below="@+id/tvDate"
            android:layout_alignTop="@+id/tvSortOrder"
            android:layout_alignLeft="@+id/btnSave"
            android:layout_alignStart="@+id/btnSave"

            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvNewsString"
            android:id="@+id/tvNewsDesk"
            android:layout_alignTop="@+id/cbFashion"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cbArts"
            android:checked="true"
            android:text="Arts"
            android:onClick="onCheckboxClicked"
            android:layout_below="@+id/cbSports"
            android:layout_alignLeft="@+id/cbSports"
            android:layout_alignStart="@+id/cbSports" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sports"
            android:id="@+id/cbSports"
            android:checked="false"
            android:onClick="onCheckboxClicked"
            android:layout_below="@+id/cbFashion"
            android:layout_alignLeft="@+id/btnSave"
            android:layout_alignStart="@+id/btnSave" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fashion&amp;Style"
            android:id="@+id/cbFashion"
            android:checked="false"
            android:onClick="onCheckboxClicked"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/cbSports"
            android:layout_alignStart="@+id/cbSports" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnSaveString"
            android:id="@+id/btnSave"
            android:layout_below="@+id/cbSports"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="#9f5953"
            />




</RelativeLayout>
